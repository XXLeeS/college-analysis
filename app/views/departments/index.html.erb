<div class="container" id="department_index">
	<div class="row" >
		<div id="search">
			<%= form_tag search_departments_path, :method => :post, :class => 'form-horizontal ' do %>
			</div>
			
				<div class="col-xs-11">
					<div class="form-group " >
						<%= text_field_tag :dep_no, nil, class: "form-control search_wrap" ,autofocus: true, placeholder: "輸入完整系所名稱" %>
					</div>
					<div   id = "sumbit">
						<button type="submit" class="btn btn-default btn_css">&#10140</button>
					</div>
				</div>
		<% end %>
	</div>

	<div class="row outline" >
	<% @colleges.each do |c| %>
		<div class="col-md-12 ">
			<div class="one-college">
				<%= link_to c.name, college_path(c) %>
			</div>
		</div>
	<% end %>
	</div>
</div>