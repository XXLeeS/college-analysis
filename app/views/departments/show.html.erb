<div class="container">
	<div class="row">
		<h1><%= @department.name %></h1>
		<div class="col-md-4">
			<h4>最低備取名次：<%= @department.last_text %></h4>
		</div>
		<div class="col-md-4">
			<h4>系所領域：<%= @department.field_text %></h4>
		</div>
		<div class="col-md-4">
			<h4>最低錄取分數：<%= @department.lowest_text %></h4>
		</div>
	</div>
	<div class="row">
		<div class="col-md-6">
			<div id="piechart">
				<!-- pie chart is inserted here -->
			</div>
		</div>
	</div>
	<div class="row">
	<h2>對戰紀錄</h2>
		<table class="table">
		<thead>
			<tr>
				<th>opponent</th>
				<th>win</th>
				<th>total</th>
				<th>rate</th>
			</tr>
		</thead>
		<tbody>
		<% @win_rate.each do |w| %>
			<tr>
				<td><%= w.opponent_name %></td>
				<td><%= w.win %></td>
				<td><%= w.total %></td>
				<td><%= w.rate_percentage %> %</td>
			</tr>
		<% end %>
		</tbody>
		</table>
	</div>
</div>