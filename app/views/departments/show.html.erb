<div class="container">
	<div class="row">
		<h1><%= @department.name %></h1>
	</div>
	<div class="row">
		<div class="col-md-4">
		<div class="block">
			<table>
				<tr>
					<td>正取人數</td>
					<td></td>
				</tr>
				<tr>
					<td>備取人數</td>
					<td></td>
				</tr>
				<tr>
					<td>最低備取名次</td>
					<td><%= @department.last_text %></td>
				</tr>
				<tr>
					<td>實際錄取人數</td>
					<td></td>
				</tr>
				<tr>
					<td>預測錄取人數</td>
					<td></td>
				</tr>
			</table>
		</div>
		</div>

		<div class="col-md-8">

		</div>
	</div>
	<div class="row">
		<div class="col-md-6">
			<div id="piechart">
				<!-- pie chart is inserted here -->
			</div>
		</div>
	</div>
	<div class="row">
	<h2>對戰紀錄</h2>
		<table class="table">
		<thead>
			<tr>
				<th>opponent</th>
				<th>win</th>
				<th>total</th>
				<th>rate</th>
			</tr>
		</thead>
		<tbody>
		<% @win_rate.each do |w| %>
			<tr>
				<td><%= w.opponent_name %></td>
				<td><%= w.win %></td>
				<td><%= w.total %></td>
				<td><%= w.rate_percentage %> %</td>
			</tr>
		<% end %>
		</tbody>
		</table>
	</div>
</div>